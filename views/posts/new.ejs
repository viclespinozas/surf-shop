<% layout('layouts/boilerplate') -%>
<h1>New Post!</h1>

<form method="POST" action="/posts" enctype="multipart/form-data">
	<div><input type="text" name="post[title]" placeholder="Title"></div>
	<div><input type="number" name="post[price]" placeholder="Price" step=".01"></div>
	<div>
		<input type="file" name="images" accept="images/*" multiple>
	</div>
	<textarea name="post[description]" placeholder="Description"></textarea>
	<div><input type="text" name="post[location]" placeholder="Location"></div>
	<input type="submit">
</form>