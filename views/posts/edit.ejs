<% layout('layouts/boilerplate') -%>
<h1>Edit Post!</h1>

<form method="POST" action="/posts/<%= post.id  %>?_method=PUT" id="postEditForm" enctype="multipart/form-data">
	<div><input type="text" name="post[title]" placeholder="Title" value="<%= post.title %>"></div>
	<div><input type="number" name="post[price]" placeholder="Price" step=".01"> value="<%= post.price %>"></div>
	<div>
		<input type="file" id="imageUpload" name="images" accept="images/*" multiple>
		<div>
			<% post.images.forEach(function(image, i) { %>
				<img src="<%= image.url %>" alt="" width="50" />
				<label for="">Delete?</label>
				<input type="checkbox" name="deleteImages[]" class="imageDeleteCheckbox" id="image<%= i%>" value="<%= image.public_id %>">
			<% }); %>
		</div>
	</div>
	<textarea name="post[description]" placeholder="Description"><%= post.description %></textarea>
	<div><input type="text" name="post[location]" placeholder="Location" value="<%= post.location %>"></div>
	<input type="submit">
</form>

<script src="/javascripts/post-edit.js">
	
</script>